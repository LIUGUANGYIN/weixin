.article-detail-img{
  position: relative;
}
.article-detail-img-main{
  width: 100%;
  height: 480rpx;
}
.article-detail-img-music{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 50%;
  top:50%;
  margin-left: -30rpx;
  border-radius: 50%;
}
.article-detail-head{
  height: 160rpx;
  line-height:160rpx; 
}
.article-detail-head-avatar{
    width: 60rpx;
    height:60rpx;
    border-radius: 50%;
    margin-left: 10rpx;
    vertical-align: middle;
}
.article-detail-head-text,
.article-detail-head-date,
.article-detail-head-name{
  font-size: 32rpx;
  margin-left: 10rpx;
  color:#666;
  vertical-align: middle;
}
.article-detail-head-text,
.article-detail-head-date{
  margin-left: 10rpx;
  color:#666;
}
.article-detail-title{
  font-size: 36rpx;
  font-weight: 600;
  margin-left: 10px;
}
.article-detail-opreation{
  position: relative;
  height: 80px;
  line-height: 80px;
  padding: 0 20px;
}
.article-detail-opreation-collection,
.article-detail-opreation-share{
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
  position: absolute;
  border-radius: 50%;
  top:20rpx;
  z-index: 999; 
}
.article-detail-opreation-collection{
  right: 100rpx;
}
.article-detail-opreation-share{
  right: 20rpx;
}
.article-detail-opreation-line{
  height: 1px;
  width: 650rpx;
  background-color: #ddd;
  position: absolute;
  top: 20px;
  left:10px;
}
.article-detail-content{
  line-height: 60rpx;
  letter-spacing: 2px;
  padding: 10px;
  color: #666;
}